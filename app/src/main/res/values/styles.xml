<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/main_orange</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>

        <!--Fix for missing buttons in default alert dialogue in Marshmallow and above-->
        <item name="android:alertDialogTheme">@style/Theme.AppCompat.Light.Dialog.Alert</item>
        <item name="alertDialogTheme">@style/Theme.AppCompat.Light.Dialog.Alert</item>

        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textColorSecondary">@color/main_orange</item>

    </style>


    <!--MY CUSTOM THEMES-->

    <style name="Theme.CustomTransparent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="AppTheme.CustomFloatingWindow" parent="android:Theme">
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@android:color/black</item>
        <item name="android:background">@color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="AppTheme.CustomAlertDialogue" parent="Base.Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@color/main_orange</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColorPrimary">@color/main_orange</item>
    </style>

    <!--FORMS-->
    <style name="form_fields">
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:backgroundTint">@color/main_orange</item>
        <item name="android:textColorHint">@color/main_orange</item>
    </style>
    <style name="form_separator">
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:layout_marginStart">12dp</item>
    </style>

    <style name="btn_solid_white_bg_orange_brd_txt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/no_background_border_orange</item>
        <item name="android:textColor">@color/main_orange</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="btn_solid_orange_bg_white_txt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded_solid_main_orange</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="menu_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/border_glow</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="default_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/main_orange</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/main_orange</item>
        <item name="android:textColor">@color/main_orange</item>
    </style>

    <style name="btn_solid_orange_white_txt">
        <item name="android:layout_width" tools:ignore="NewApi">wrap_content</item>
        <item name="android:layout_height" tools:ignore="NewApi">wrap_content</item>
        <item name="android:background" tools:ignore="NewApi">@drawable/round_orange_main_buttons</item>
        <item name="android:textColor" tools:ignore="NewApi">@color/white</item>
        <item name="android:paddingLeft" tools:ignore="NewApi">8dp</item>
        <item name="android:paddingRight" tools:ignore="NewApi">8dp</item>
    </style>

</resources>